@using MvcWebCv.Models.Entity
@model List<TblHobilerim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Hobi Düzenle</h2>
<hr />
<form method="post">
    @foreach (var x in Model)
    {
        <label class="form-label">Açıklama 1</label>
        <textarea rows="5" name="Aciklama1" class="form-control">@x.Aciklama1</textarea>
        <label class="form-label">Açıklama 2</label>
        <textarea rows="5" name="Aciklama2" class="form-control">@x.Aciklama2</textarea>
    }
    <br />
    <button class="btn btn-outline-success">Güncelle</button>
</form>
