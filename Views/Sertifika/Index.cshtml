@using MvcWebCv.Models.Entity
@model List<TblSertifikalarım>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    string color = "";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content mt-3">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    @foreach (var x in Model)
                                    {
                                        color = (x.Id % 2 == 0) ? "success" : "info";
                                        <!-- timeline time label -->
                                        <div class="time-label">
                                            <a href="/Sertifika/Edit/@x.Id" class="btn btn-@color p-0">
                                                <span class="bg-@color">
                                                    @x.Tarih
                                                </span>
                                            </a>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @x.Aciklama
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <a href="/Sertifika/Create" class="btn btn-outline-success">Yeni Sertifika Ekle</a>
                            </div>
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</body>
</html>